{% macro aboutLink(info) %}
<li class="channel-links-item">
    <a href="{{ info.navigationEndpoint.commandMetadata.webCommandMetadata.url }}" class="about-channel-link">
        <img src="{{ info.icon.thumbnails[0].url }}" alt="" class="about-channel-link-icon" width="16" height="16" alt="{{ this.commandMetadata.webCommandMetadata.url }}">
        <span class="about-channel-link-text">{{ getText(info.title) }}</span>
    </a>
</li>
{% endmacro %}
<li>
    <div class="about-metadata-container">
        <div class="about-metadata-stats branded-page-box-padding">
            <div class="about-stats">
                {% if yt.page.subCount %}
                <span class="about-stat">
                    <b>{{ yt.page.subCount }}</b> subscribers
                </span>
                {% endif %}
                <span class="about-stat">
                   {{ yt.page.subCount ? " â€¢ " }}<b>{{ yt.page.viewCount ? yt.page.viewCount : "0" }}</b> views
                </span>
                <br>
                <span class="about-stat">{{ yt.page.joinDate }}</span>
            </div>
        </div>
        {% if yt.page.aboutDescription %}
        <div class="about-metadata-label branded-page-box-padding">
            <span>Description</span>
        </div>
        <div class="about-description branded-page-box-padding">
            <pre>
                {{ getText(yt.page.aboutDescription) }}
            </pre>
        </div>
        {% endif %}
        {% if yt.page.aboutCountry %}
        <div class="about-metadata-label about-metadata-label-border-top branded-page-box-padding">
            <span>Details</span>
        </div>
        <div class="country-container branded-page-box-padding">
            <span class="country-label">Country: </span>
            <span class="country-inline">{{ yt.page.aboutCountry }}</span>
        </div>
        {% endif %}
        {% if yt.page.primaryLinks %}
        <div class="about-metadata-label about-metadata-label-border-top branded-page-box-padding">
            <span>Links</span>
        </div>
        <div class="about-metadata branded-page-box-padding clearfix">
            <ul class="about-custom-links">
                {% for link in yt.page.primaryLinks %}
                {{ _self.aboutLink(link) }}
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
</li>